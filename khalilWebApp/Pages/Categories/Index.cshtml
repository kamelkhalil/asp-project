@page
@model khalilWebApp.Pages.Categories.IndexModel

<div class="container pt-3">
   <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Categories</h2>
       </div>
       <div class="col-6 text-end">
           <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;
                Create New Category
           </a>
       </div>
   </div>
   <br /><br />
    <table class="table table-bordered table-striped" style="width:100%;text-align:center">
       <thead>
           <tr>
               <th>
                   Categories Name
               </th>
               <th>
                   display Order
               </th>
               <th></th>
           </tr>
       </thead>
       <tbody>
           @foreach(var obj in Model.Categories)
            {
                <tr >
                   <!-- VALUE OF CATEGORIES NAME -->
                    <td width="50%">@obj.Name</td>
                    <!-- VALUE OF DISPLAY ORDER -->
                    <td width="50%">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-85 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i>
                        </a>  
                        </div>
                        </td>
                </tr>
            }
            
       </tbody>
   </table>
</div>