@page
@model khalilWebApp.Pages.Categories.DeleteModel

<form method="post">
    <div class="card border-0 mt-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Delete Category</h2>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Category.Id" />
            <div class="form-group">
                <label asp-for="Category.Name"></label>
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Category.DisplayOrder"></label>
                <input asp-for="Category.DisplayOrder" disabled class="form-control" />
            </div>
        </div>
        <div class="card-footer text-right">
            <button type="submit" class="btn btn-danger" style="width:150px;" asp-page-handler="OnPost">Delete</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px;">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
